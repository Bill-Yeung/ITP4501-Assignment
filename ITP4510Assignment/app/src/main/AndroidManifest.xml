<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <!--Connect internet and read write permission -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".GameApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ITP4501EAAssignment"
        tools:targetApi="31">
        <activity
            android:name=".MathQuizActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GameActivity" />
        <activity
            android:name=".ResultActivity"
            android:exported="false" />
        <activity
            android:name=".FinalResultActivity"
            android:exported="false" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ViewRecord" />
        <activity
            android:name=".chooseOpponentActivity"
            android:exported="false" />
        <activity android:name=".manual" />
        <activity android:name=".Credits" />
    </application>

</manifest>