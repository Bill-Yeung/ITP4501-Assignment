<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/bg2"
    android:padding="24dp"
    tools:context=".ResultActivity">

    <TextView
        android:id="@+id/tvResultMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="34sp"
        android:fontFamily="@font/bitcount_grid_double_var"
        android:textColor="@color/white"
        android:layout_marginTop="25dp"

        android:textStyle="bold"
        tools:text="It's a Draw!" />

    <TextView
        android:id="@+id/tvActualTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/bitcount_grid_double_var"
        android:textColor="@color/white"
        tools:text="Actual Total: 15" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Move"
                android:textSize="18sp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivPlayerRightHand"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    tools:src="@drawable/right0" />

                <ImageView
                    android:id="@+id/ivPlayerLeftHand"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    tools:src="@drawable/left5" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvPlayerFingers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                tools:text="Fingers: 5" />

            <TextView
                android:id="@+id/tvPlayerGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="16sp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                tools:text="Guess: 15" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvOpponentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="CPU's Move" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivOpponentRightHand"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    tools:src="@drawable/right5" />

                <ImageView
                    android:id="@+id/ivOpponentLeftHand"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    tools:src="@drawable/left0" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvOpponentFingers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="Fingers: 10" />

            <TextView
                android:id="@+id/tvOpponentGuess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/bitcount_grid_double_var"
                android:textColor="@color/white"
                android:textSize="16sp"
                tools:text="Guess: 10" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnNextRound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Next Round" />

</LinearLayout>